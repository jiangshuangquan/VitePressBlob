{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    // "strict": true,
    "jsx": "preserve",
    "moduleResolution": "Node16",

    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["docs/.vitepress/theme/*"]
    }
  },
  "include": ["env.d.ts", "src/**/*", "docs/**/*", "typing.d.ts"]
}
